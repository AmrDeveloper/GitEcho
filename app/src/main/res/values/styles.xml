<resources>

    <!-- GitEcho application theme. -->
    <style name="GitHubTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grayBlack</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="ProfileTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/dimen3dp</item>
        <item name="android:background">@color/whiteGray</item>
    </style>
</resources>
