<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eee"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            android:id="@+id/repoNameTxt"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_repo"
            android:drawableStart="@drawable/ic_repo"
            android:drawablePadding="@dimen/dimen5dp"
            android:textStyle="bold"
            tools:text="AmrDeveloper/Android" />

        <TextView
            android:id="@+id/repoDescTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:lines="4"
            android:padding="15dp"
            tools:text="Description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoLangTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            tools:text="Java"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoStarTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_star"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/dimen5dp"
            tools:text="Stars : 35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoForkTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            tools:text="Forks : 35"
            android:drawableLeft="@drawable/ic_repo_forked"
            android:drawableStart="@drawable/ic_repo_forked"
            android:drawablePadding="@dimen/dimen5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoContributorsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            android:text="@string/contributors"
            android:drawableLeft="@drawable/ic_peoples"
            android:drawableStart="@drawable/ic_peoples"
            android:drawablePadding="@dimen/dimen5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoIssues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_issue_opened"
            android:drawableStart="@drawable/ic_issue_opened"
            android:drawablePadding="@dimen/dimen5dp"
            android:text="@string/releases"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoReleases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_tag"
            android:drawableStart="@drawable/ic_tag"
            android:drawablePadding="@dimen/dimen5dp"
            android:text="@string/releases"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoCreatedAtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            tools:text="Created At 30 nov 2019"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoUpdatedFromTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            tools:text="Updated on 31 nov 2019"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repoLicenseTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="15dp"
            tools:text="License"
            android:drawablePadding="@dimen/dimen5dp"
            android:drawableLeft="@drawable/ic_law"
            android:drawableStart="@drawable/ic_law"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
</layout>