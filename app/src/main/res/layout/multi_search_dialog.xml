<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen150dp"
        android:layout_marginStart="@dimen/dimen5dp"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginEnd="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen75dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grayBlack" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen75dp"
            android:layout_height="@dimen/dimen75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_mark_github"
            app:civ_border_color="@color/orange"
            app:civ_border_width="@dimen/dimen2dp"
            android:clickable="false"
            app:civ_circle_background_color="@color/gray"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen5dp"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginEnd="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen5dp"
        android:background="@color/gray"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:textColorHint="@color/orange"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_marginBottom="@dimen/dimen5dp"
            android:padding="@dimen/dimen10dp" />

        <Spinner
            android:id="@+id/searchType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_marginBottom="@dimen/dimen5dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/search_type"
            android:padding="@dimen/dimen10dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen5dp"
            android:background="@color/grayBlack"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/whiteGray" />
    </LinearLayout>
</LinearLayout>
</layout>