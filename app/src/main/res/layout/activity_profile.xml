<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ProfileActivity">

            <ImageView
                android:id="@+id/avatarImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#000" />

            <TextView
                android:id="@+id/nameTxt"
                style="@style/ProfileTextStyle"
                android:gravity="center"
                android:padding="@dimen/dimen10dp"
                tools:text="Amr Hesham" />

            <TextView
                android:id="@+id/bioTxt"
                style="@style/ProfileTextStyle"
                android:gravity="center"
                android:lines="2"
                tools:text="Self-Taught Software Engineer" />

            <TextView
                android:id="@+id/companyTxt"
                style="@style/ProfileTextStyle"
                android:drawableStart="@drawable/ic_organization"
                android:drawableLeft="@drawable/ic_organization"
                android:drawablePadding="@dimen/dimen5dp"
                tools:text="Google, Inc" />

            <TextView
                android:id="@+id/locationTxt"
                style="@style/ProfileTextStyle"
                android:drawableStart="@drawable/ic_location"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/dimen5dp"
                tools:text="Alexandria, Egypt" />

            <TextView
                android:id="@+id/mailText"
                style="@style/ProfileTextStyle"
                android:autoLink="email"
                android:drawableStart="@drawable/ic_mail"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="@dimen/dimen5dp"
                android:textColorLink="@color/black"
                tools:text="amr@Developer.com.eg" />

            <TextView
                android:id="@+id/reposTxt"
                style="@style/ProfileTextStyle"
                tools:text="Repositories : 15" />

            <TextView
                android:id="@+id/starTxt"
                style="@style/ProfileTextStyle"
                tools:text="Stars : 4" />

            <TextView
                android:id="@+id/followersTxt"
                style="@style/ProfileTextStyle"
                tools:text="Followers : 15" />

            <TextView
                android:id="@+id/followingTxt"
                style="@style/ProfileTextStyle"
                tools:text="Following : 1" />
        </LinearLayout>
    </ScrollView>
</layout>