<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/orgCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen65dp"
        app:cardCornerRadius="@dimen/dimen5dp"
        app:cardElevation="@dimen/dimen2dp"
        app:cardUseCompatPadding="true"
        app:elevation="@dimen/dimen5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/orgAvatarImg"
                android:layout_width="@dimen/dimen50dp"
                android:layout_height="@dimen/dimen50dp"
                android:layout_margin="@dimen/dimen5dp"
                android:contentDescription="@string/user_avatar"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/dimen2dp" />

            <TextView
                android:id="@+id/orgNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/orgAvatarImg"
                android:layout_toRightOf="@id/orgAvatarImg"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/dimen20sp"
                android:textStyle="bold"
                tools:text="AmrDeveloper" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>